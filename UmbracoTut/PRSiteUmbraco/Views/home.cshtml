@using System.Web.Mvc.Html
@using PRSiteUmbraco.Entities
@inherits  UmbracoViewPage<HomeModel>
@{
    Layout = "Layout.cshtml";
    const string PARTIAL_VIEW_FOLDER_LAYOUT = "~/Views/Partials/SiteLayout/";
    const string PARTIAL_VIEW_FOLDER_HOME = "~/Views/Partials/Home/";
}

@*Render intro*@
@Html.CachedPartial(string.Format("{0}{1}.cshtml", PARTIAL_VIEW_FOLDER_LAYOUT, "_Intro"), null, PRSiteUmbraco.Infrastructure.Constants.CACHE_TIME, true)

@*Render featured section*@
@{ Html.RenderPartial(string.Format("{0}{1}.cshtml", PARTIAL_VIEW_FOLDER_HOME, "_Featured"),
                                                                             Model.FeaturedItem != null ? Model.FeaturedItem.GetEnumerator() : new List<FeaturedItem>().GetEnumerator());}
@*Render service section*@
@Html.CachedPartial(string.Format("{0}{1}.cshtml", PARTIAL_VIEW_FOLDER_HOME, "_Services"),
                      null, PRSiteUmbraco.Infrastructure.Constants.CACHE_TIME, true)

@*Render blog section*@
@Html.CachedPartial(string.Format("{0}{1}.cshtml", PARTIAL_VIEW_FOLDER_HOME, "_Client"),
    Model.Terminal, PRSiteUmbraco.Infrastructure.Constants.CACHE_TIME, true)